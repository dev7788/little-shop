%h1 Your Cart
%table{:board => 0, :class => "table table-striped"}
  %tbody
    %tr
      %td
        %h4 Item
      %td
        %h4 Description
      %td
        %h4 Price
      %td
        %h4 Quantity
    - @cart.items.each do |item|
      %tr{:class => "item item-#{item.id}"}
        %td= item.name
        %td= item.description
        %td= item.price
        %td
          = form_tag('/cart', method: :put) do
            = hidden_field_tag :item_id, item.id
            = label_tag :quantity, 'Quantity: '
            = number_field_tag :quantity, @cart.contents[item.id.to_s], {min: 1}
            = submit_tag 'Update Quantity'
            = button_to "Remove", cart_path(item_id: item.id), method: :delete, :class => 'btn btn_primary'
    %tr
      %td= ""
      %td= ""
      %td= ""
      %td
        %h4 Total: $#{@cart.total_price}
.checkout
  - if current_user
    = link_to "Checkout", new_order_path
  - else
    %h3 You must be signed in to checkout
    = link_to "Create Account", new_user_path
    = link_to "Login", login_path
