%div{class: "item item-#{item.id} col-md-3" }
  %div img src="https://thumbs.dreamstime.com/x/coffee-bean-background-19575047.jpg"
  = link_to item.name, item_path(item), :class => "item-name"
  = button_to "Add to Cart", cart_path(item_id: item.id), :class => "btn btn_primary"
  %span= item.status
  = link_to 'Edit', edit_admin_item_path(item) if current_admin?
